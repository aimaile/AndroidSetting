<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="root.cloudwalk.cn.root1300.MainActivity">

    <EditText
        android:id="@+id/et_ip"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="192.168.1.100"
        android:hint="请输入ip"
        />
    <EditText
        android:id="@+id/et_mask"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="255.255.255.0"
        android:hint="请输入掩码"
        />
    <EditText
        android:id="@+id/et_gw"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="192.168.1.1"
        android:hint="请输入网关"
        />
    <EditText
        android:id="@+id/et_dns1"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="114.114.114.114"
        android:hint="请输入dns1"
        />
    <EditText
        android:id="@+id/et_dns2"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="8.8.8.8"
        android:hint="请输入dns2"
        />

